@model List<JadooTravel.Dtos.FeatureDtos.ResultFeatureDto>
@{
    // YouTube URL'sini embed formatýna çevirme fonksiyonu
    string ConvertToEmbedUrl(string videoUrl)
    {
        if (string.IsNullOrEmpty(videoUrl)) return "";
        
        if (videoUrl.Contains("youtu.be/"))
        {
            var videoId = videoUrl.Split('/').Last().Split('?').First();
            return $"https://www.youtube.com/embed/{videoId}";
        }
        else if (videoUrl.Contains("youtube.com/watch?v="))
        {
            var uri = new Uri(videoUrl);
            var query = System.Web.HttpUtility.ParseQueryString(uri.Query);
            var videoId = query["v"];
            return $"https://www.youtube.com/embed/{videoId}";
        }
        else if (videoUrl.Contains("youtube.com/embed/"))
        {
            return videoUrl;
        }
        return videoUrl;
    }
}

<section style="padding-top: 7rem;">
    <div class="bg-holder" style="background-image:url(/public/assets/img/hero/hero-bg.svg);">
    </div>
    <!--/.bg-holder-->

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-5 col-lg-6 order-0 order-md-1 text-end"><img class="pt-7 pt-md-0 hero-img" src="/public/assets/img/hero/ChatGPT_Image.png" alt="hero-header" /></div>
            <div class="col-md-7 col-lg-6 text-md-start text-center py-6">

                @if (Model != null && Model.Any())
                {
                    var item = Model.First();
                    var embedUrl = ConvertToEmbedUrl(item.VideoUrl);
                    
                    <h4 class="fw-bold text-danger mb-3" data-i18n="hero.welcome">@item.Title</h4>
                    <h1 class="hero-title" data-i18n="hero.title">@item.MainTitle</h1>
                    <p class="mb-4 fw-medium" data-i18n="hero.description">@item.Description</p>
                    <div class="text-center text-md-start">
                        <div class="w-100 d-block d-md-none"></div>
                        <a href="#!" role="button" data-bs-toggle="modal" data-bs-target="#popupVideo">
                            <span class="btn btn-danger round-btn-lg rounded-circle me-3 danger-btn-shadow">
                                <img src="/public/assets/img/hero/play.svg" width="15" alt="play"/>
                            </span>
                        </a>
                        <span class="fw-medium" data-i18n="hero.watchButton">Watch the Future</span>

                        <div class="modal fade" id="popupVideo" tabindex="-1" aria-labelledby="popupVideo" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                <div class="modal-content border-0">
                                    <div class="modal-header border-0">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body p-0">
                                        @if (!string.IsNullOrEmpty(embedUrl))
                                        {
                                            <iframe class="rounded" 
                                                    style="width:100%;height:400px;" 
                                                    src="@embedUrl" 
                                                    title="YouTube video player" 
                                                    frameborder="0"
                                                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                                                    allowfullscreen="allowfullscreen"></iframe>
                                        }
                                        else
                                        {
                                            <div class="p-4 text-center">
                                                <p class="text-muted">Video yüklenemiyor</p>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Default content with translation keys -->
                    <h4 class="fw-bold text-danger mb-3" data-i18n="hero.welcome">Welcome to Interstellar Voyages</h4>
                    <h1 class="hero-title" data-i18n="hero.title">Explore the Universe, Discover New Worlds</h1>
                    <p class="mb-4 fw-medium" data-i18n="hero.description">Experience zero gravity, orbit breathtaking planets, and witness the beauty of the cosmos up close.</p>
                    <div class="text-center text-md-start">
                        <div class="w-100 d-block d-md-none"></div>
                        <a href="#!" role="button" data-bs-toggle="modal" data-bs-target="#popupVideo">
                            <span class="btn btn-danger round-btn-lg rounded-circle me-3 danger-btn-shadow">
                                <img src="/public/assets/img/hero/play.svg" width="15" alt="play"/>
                            </span>
                        </a>
                        <span class="fw-medium" data-i18n="hero.watchButton">Watch the Future</span>
                        
                        <div class="modal fade" id="popupVideo" tabindex="-1" aria-labelledby="popupVideo" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered modal-lg">
                                <div class="modal-content border-0">
                                    <div class="modal-header border-0">
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body p-0">
                                        <iframe class="rounded" 
                                                style="width:100%;height:400px;" 
                                                src="https://www.youtube.com/embed/QoSliFJmNKI" 
                                                title="YouTube video player" 
                                                frameborder="0"
                                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                                                allowfullscreen="allowfullscreen"></iframe>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>