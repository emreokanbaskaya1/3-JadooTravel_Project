@model List<JadooTravel.Dtos.TestimonialDtos.ResultTestimonialDto>

@*
    Testimonial
*@

<section id="testimonial">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="mb-8 text-start">
                    <h5 class="text-secondary" data-i18n="testimonials.subtitle">Testimonials</h5>
                    <h3 class="fs-xl-10 fs-lg-8 fs-7 fw-bold font-cursive text-capitalize" data-i18n="testimonials.title">What people say about Us.</h3>
                </div>
            </div>
            <div class="col-lg-1"></div>
            <div class="col-lg-6">
                <div class="pe-7 ps-5 ps-lg-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="carousel slide carousel-fade position-static" id="testimonialIndicator" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                @for (int i = 0; i < Model.Count && i < 5; i++)
                                {
                                    <button class="@(i == 0 ? "active" : "")" type="button" data-bs-target="#testimonialIndicator" data-bs-slide-to="@i" aria-current="@(i == 0 ? "true" : "false")" aria-label="Testimonial @i"></button>
                                }
                            </div>
                            <div class="carousel-inner">
                                @{int index = 0;}
                                @foreach (var item in Model.Take(5))
                                {
                                    <div class="carousel-item position-relative @(index == 0 ? "active" : "")">
                                        <div class="card shadow" style="border-radius:10px;">
                                            <div class="position-absolute start-0 top-0 translate-middle">
                                                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold" style="height:65px; width:65px;">
                                                    @item.UserName.Substring(0, Math.Min(2, item.UserName.Length)).ToUpper()  
                                                </div>
                                            </div>
                                            <div class="card-body p-4">
                                                <p class="fw-medium mb-4">&quot;@item.Comment&quot;</p>
                                                <div class="mb-2">
                                                    @for (int star = 1; star <= 5; star++)
                                                    {
                                                        <span class="@(star <= item.Rating ? "text-warning" : "text-muted")">★</span>
                                                    }
                                                </div>
                                                <h5 class="text-secondary">@item.UserName</h5>
                                                <p class="fw-medium fs--1 mb-0">@item.Title</p>
                                            </div>
                                        </div>
                                        <div class="card shadow-sm position-absolute top-0 z-index--1 mb-3 w-100 h-100" style="border-radius:10px;transform:translate(25px, 25px)"> </div>
                                    </div>
                                    index++;
                                }
                            </div>
                            <div class="carousel-navigation d-flex flex-column flex-between-center position-absolute end-0 top-lg-50 bottom-0 translate-middle-y z-index-1 me-3 me-lg-0" style="height:60px;width:20px;">
                                <button class="carousel-control-prev position-static" type="button" data-bs-target="#testimonialIndicator" data-bs-slide="prev"><img src="/public/assets/img/icons/up.svg" width="16" alt="icon" /></button>
                                <button class="carousel-control-next position-static" type="button" data-bs-target="#testimonialIndicator" data-bs-slide="next"><img src="/public/assets/img/icons/down.svg" width="16" alt="icon" /></button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel slide carousel-fade position-static" id="testimonialIndicator" data-bs-ride="carousel">
                            <div class="carousel-indicators">
                                <button class="active" type="button" data-bs-target="#testimonialIndicator" data-bs-slide-to="0" aria-current="true" aria-label="Testimonial 0"></button>
                            </div>
                            <div class="carousel-inner">
                                <div class="carousel-item position-relative active">
                                    <div class="card shadow" style="border-radius:10px;">
                                        <div class="position-absolute start-0 top-0 translate-middle">
                                            <img class="rounded-circle fit-cover" src="/public/assets/img/testimonial/author.png" height="65" width="65" alt="" />
                                        </div>
                                        <div class="card-body p-4">
                                            <p class="fw-medium mb-4">&quot;Jadoo provides excellent interstellar travel services. We are very satisfied with their space tourism quality.&quot;</p>
                                            <h5 class="text-secondary">Space Explorer</h5>
                                            <p class="fw-medium fs--1 mb-0">Cosmic Travel Enthusiast</p>
                                        </div>
                                    </div>
                                    <div class="card shadow-sm position-absolute top-0 z-index--1 mb-3 w-100 h-100" style="border-radius:10px;transform:translate(25px, 25px)"> </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div><!-- end of .container-->
</section>