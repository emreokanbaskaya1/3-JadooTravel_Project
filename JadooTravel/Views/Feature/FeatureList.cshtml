@model List<JadooTravel.Dtos.FeatureDtos.ResultFeatureDto>
@{
    ViewData["Title"] = "FeatureList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br />
    <br />

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>MainTitle</th>
            <th>Description</th>
            <th>Video Url</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>

        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.MainTitle</td>
                <td>@item.Description</td>
                <td>@item.VideoUrl</td>
                <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Delete</a></td>
                <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Update</a></td>
            </tr>
        }

    </table>
    <a href="/Feature/CreateFeature" class="btn btn-info">Create New Feature</a>

</div>

