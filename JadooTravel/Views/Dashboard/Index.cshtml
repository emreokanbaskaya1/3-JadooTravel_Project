@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8 d-flex align-items-strech">
        <div class="card w-100">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-between mb-1">
                    <div class="">
                        <h5 class="card-title fw-semibold">Destination Prices and Analytics</h5>
                    </div>
                    
                </div>
                <!-- Price Statistics Row -->
                <div class="row mb-4">
                   
                    <div class="col-3">
                        <div class="text-center p-3 bg-light rounded">
                            <h6 class="text-success mb-1">Highest</h6>
                            <h4 class="fw-bold">₺@(ViewBag.MaxPrice ?? 0)</h4>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="text-center p-3 bg-light rounded">
                            <h6 class="text-warning mb-1">Lowest</h6>
                            <h4 class="fw-bold">₺@(ViewBag.MinPrice ?? 0)</h4>
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="text-center p-3 bg-light rounded">
                            <h6 class="text-info mb-1">Total</h6>
                            <h4 class="fw-bold">@(ViewBag.TotalDestinations ?? 0)</h4>
                        </div>
                    </div>
                </div>
                
                <!-- Destination List -->
                @if (ViewBag.DestinationData != null)
                {
                    <div style="max-height: 250px; overflow-y: auto;">
                        @foreach (var destination in ViewBag.DestinationData)
                        {
                            <div class="d-flex justify-content-between align-items-center mb-2 p-3 border rounded">
                                <div>
                                    <h6 class="mb-0 fw-semibold">@destination.name</h6>
                                   
                                </div>
                                <span class="badge bg-dark fs-6">₺@destination.price</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <p class="text-muted">No destination data available</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="row">
            <div class="col-lg-12 col-sm-6">
                <!-- Category Analytics -->
                <div class="card overflow-hidden">
                    <div class="card-body p-4">
                        <h5 class="card-title mb-10 fw-semibold">Category Analytics</h5>
                        <div class="row align-items-center">
                            <div class="col-7">
                                <h4 class="fw-semibold mb-3">@(ViewBag.TotalCategories ?? 0) Categories</h4>
                                <div class="d-flex align-items-center mb-2">
                                    
                                </div>
                               
                            </div>
                            <div class="col-5">
                                <div class="d-flex justify-content-center">
                                    <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px;">
                                        <i class="ti ti-category fs-1"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-sm-6">
                <!-- Testimonials Review Analytics -->
                <div class="card">
                    <div class="card-body">
                        <div class="row align-items-start">
                            <div class="col-8">
                                <h5 class="card-title mb-10 fw-semibold">Customer Reviews</h5>
                                <h4 class="fw-semibold mb-3">@(ViewBag.AverageRating ?? 0)/5</h4>
                                <div class="d-flex align-items-center pb-1">
                                    <span class="me-2 rounded-circle bg-light-warning round-20 d-flex align-items-center justify-content-center">
                                        <i class="ti ti-star text-warning"></i>
                                    </span>
                                    <p class="text-dark me-1 fs-3 mb-0">@(ViewBag.TotalTestimonials ?? 0)</p>
                                    <p class="fs-3 mb-0">Reviews</p>
                                </div>
                                <div class="mt-2">
                                    <small class="text-muted">5 Star: @(ViewBag.FiveStarCount ?? 0) Reviews</small>
                                    <br>
                                    <small class="text-info">4 Star: @(ViewBag.FourStarCount ?? 0) Reviews</small>
                                    <br>
                                    <small class="text-warning">3 Star and Below: @(ViewBag.ThreeStarBelowCount ?? 0) Reviews</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex justify-content-end">
                                    <div class="text-white bg-warning rounded-circle p-6 d-flex align-items-center justify-content-center">
                                        <i class="ti ti-star fs-6"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    
    <div class="col-lg-12 d-flex align-items-stretch">
        <div class="card w-100">
            <div class="card-body p-4">
                <div class="d-flex mb-4 justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold">Latest Destinations</h5>
                    <small class="text-muted">Recently Added Tours</small>
                </div>

                <div class="table-responsive" data-simplebar>
                    <table class="table table-borderless align-middle text-nowrap">
                        <thead>
                            <tr>
                                <th scope="col">Destination</th>
                                <th scope="col">Price</th>
                                <th scope="col">Description</th>
                                <th scope="col">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (ViewBag.LatestDestinations != null)
                            {
                                @foreach (var destination in ViewBag.LatestDestinations)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="me-4">
                                                    <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px; font-size: 12px;">
                                                        @destination.CityCountry.Substring(0, Math.Min(2, destination.CityCountry.Length)).ToUpper()
                                                    </div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1 fw-bolder">@destination.CityCountry</h6>
                                                    <p class="fs-3 mb-0 text-muted">Tour Package</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <p class="fs-3 fw-bold mb-0 text-success">₺@destination.Price</p>
                                        </td>
                                        <td>
                                            <p class="fs-3 fw-normal mb-0 text-muted" style="max-width: 200px;">
                                                @(destination.Description?.Length > 50 ? destination.Description.Substring(0, 50) + "..." : destination.Description ?? "No description")
                                            </p>
                                        </td>
                                        <td>
                                            <span class="badge bg-light-success rounded-pill text-success px-3 py-2 fs-3">Active</span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        <p class="mb-0">No destinations available</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
